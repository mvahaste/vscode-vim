{
	// Set color theme
	"workbench.colorTheme": "One Dark Pro Darker",
	// Set icon themes
	"workbench.iconTheme": "gruvbox-material-icon-theme",
	"workbench.productIconTheme": "fluent-icons",
	// Set font
	"editor.fontFamily": "JetBrainsMono Nerd Font",
	"terminal.integrated.fontFamily": "JetBrainsMono Nerd Font",
	"debug.console.fontFamily": "JetBrainsMono Nerd Font",
	// Disable font ligatures
	"editor.fontLigatures": false,
	// Tweak themes to my liking
	"editor.tokenColorCustomizations": {
		"[Vim Deep Dark]": {
			// The default comment color is kinda weird
			"comments": "#5c6370"
		}
	},
	"workbench.colorCustomizations": {
		"[Minimal]": {
			// Make the status bar match the rest of the UI
			"statusBar.background": "#222222"
		},
		"[Gruvbox Dark Hard]": {
			// Make the borders transparent
			"sideBar.border": "#0000",
			"statusBar.border": "#0000",
			"menu.border": "#0000",
			"panel.border": "#0000",
			// Give the command palette a border
			"widget.border": "#3c3836"
		},
		"[Gruvbox Light Hard]": {
			// Make borders transparent
			"sideBar.border": "#0000",
			"statusBar.border": "#0000",
			"panel.border": "#0000",
			// Give the command palette a border
			"widget.border": "#ebdbb24b"
		},
		"[Vim Deep Dark]": {
			// Make the backgrounds darker
			"editor.background": "#161818",
			"sideBar.background": "#161818",
			"titleBar.activeBackground": "#161818",
			"statusBar.background": "#161818",
			"input.background": "#161818",
			"activityBar.background": "#161818",
			"editorSuggestWidget.background": "#161818",
			"quickInput.background": "#161818",
			"terminal.background": "#161818",
			// Make the borders transparent
			"sideBar.border": "#0000",
			"statusBar.border": "#0000",
			// Line numbers
			"editorLineNumber.foreground": "#5c6370",
			"editorLineNumber.activeForeground": "#5c6370",
			// Indentation guides
			"editorIndentGuide.background1": "#252932",
			"editorIndentGuide.activeBackground1": "#252932"
		},
		"[Hyper Term Black]": {
			"quickInput.background": "#000000",
			"input.background": "#000000"
		},
		"[One Dark Pro Darker]": {
			// Make the backgrounds darker
			"editor.background": "#121417",
			"sideBar.background": "#121417",
			"sideBarSectionHeader.background": "#121417",
			"activityBar.background": "#121417",
			"statusBar.background": "#121417",
			"statusBar.noFolderBackground": "#121417",
			"statusBar.debuggingBackground": "#121417",
			"titleBar.activeBackground": "#121417",
			"titleBar.inactiveBackground": "#121417",
			"quickInput.background": "#121417",
			"input.background": "#121417",
			"menu.background": "#121417",
			"editorSuggestWidget.background": "#121417",
			"sideBarTitle.background": "#121417",
			"terminal.background": "#121417",
			"editorInlayHint.background": "#0000",
			// Make the borders transparent
			"sideBar.border": "#0000",
			"activityBar.border": "#0000",
			"statusBar.border": "#0000",
			"statusBar.debuggingBorder": "#0000",
			"panel.border": "#0000",
			// Selection background
			"quickInputList.focusBackground": "#21252c",
			"editorSuggestWidget.selectedBackground": "#21252c",
			"list.focusBackground": "#1b1e23",
			"list.activeSelectionBackground": "#1b1e23",
			"list.inactiveSelectionBackground": "#1b1e23",
			// Indentation guides
			"editorIndentGuide.background1": "#252932",
			"editorIndentGuide.activeBackground1": "#252932",
			"tree.indentGuidesStroke": "#252932"
		},
		"[Vesper]": {
			// Make the backgrounds darker
			"statusBar.noFolderBackground": "#101010",
			"menu.background": "#171717",
			"menu.separatorBackground": "#202020"
		},
		"[Noir Essence Dark]": {
			"list.focusOutline": "#7daea3" // Default is transparent, but I navigate with the keyboard so it's helpful to have a border
		}
	},
	"workbench.settings.applyToAllProfiles": ["workbench.colorCustomizations"],
	// Show current file path in status bar, since I don't use breadcrumbs or tabs
	"filePathBar.statusBarAlignment": "right",
	"filePathBar.pathStyle": "relative",
	// Show the clock and battery percentage in the status bar
	"lifeline.clock.format": "HH:mm",
	"lifeline.swap": true,
	// Tailwind Fold settings
	"tailwind-fold.foldStyle": "QUOTES",
	"tailwind-fold.unfoldIfLineSelected": true,
	"tailwind-fold.showTailwindImage": false,
	"tailwind-fold.foldedTextColor": "",
	"tailwind-fold.foldedTextBackgroundColor": "",
	"tailwind-fold.autoFold": true,
	// Allow comments in JSON files
	"files.associations": {
		"*.json": "jsonc"
	},
	// Open VS Code without workspace
	"workbench.startupEditor": "none",
	"window.openWithoutArgumentsInNewWindow": "on",
	"window.restoreWindows": "none",
	// Override UI font
	"apc.font.family": "JetBrainsMono Nerd Font",
	// Import custom CSS
	"apc.imports": ["<PATH-TO-CUSTOM.CSS>"],
	// Disable title bar on systems that support it
	// "apc.electron": {
	// 	"titleBarStyle": "hidden"
	// },
	// Disable explorer action confirmation windows for keyboard-only use
	"explorer.confirmDelete": false,
	"explorer.confirmDragAndDrop": false,
	// Format on save and paste
	"editor.formatOnSave": true,
	"editor.formatOnPaste": true,
	// Visual tweaks (clutter, etc.)
	"window.title": "${dirty} ${activeRepositoryName} (${activeRepositoryBranchName})",
	"window.commandCenter": false,
	"window.menuBarVisibility": "hidden",
	"window.density.editorTabHeight": "compact",
	"breadcrumbs.enabled": false,
	"symbols.hidesExplorerArrows": true,
	"editor.colorDecorators": false,
	"editor.lightbulb.enabled": "off",
	"editor.stickyScroll.enabled": false,
	"editor.linkedEditing": true,
	"editor.suggest.insertMode": "replace",
	"editor.lineNumbers": "relative",
	"editor.matchBrackets": "never",
	"editor.minimap.enabled": false,
	"editor.minimap.autohide": true,
	"editor.renderLineHighlight": "none",
	"editor.guides.indentation": true,
	"editor.smoothScrolling": true,
	"editor.cursorSmoothCaretAnimation": "on",
	"workbench.sideBar.location": "right",
	"workbench.tips.enabled": false,
	"workbench.tree.indent": 16,
	"workbench.tree.renderIndentGuides": "always",
	"workbench.editor.showTabs": "none",
	"workbench.activityBar.location": "hidden",
	"workbench.editor.editorActionsLocation": "hidden",
	"workbench.layoutControl.enabled": false,
	"terminal.integrated.shellIntegration.decorationsEnabled": "never",
	// Keep at least 15 lines above and below cursor for context
	"editor.cursorSurroundingLines": 15,
	// Vim settings
	"vim.leader": "<space>",
	// Allow going over folded lines without opening them
	"vim.foldfix": true,
	"vim.hlsearch": true,
	// Nicer copy-paste behavior
	"vim.useSystemClipboard": true,
	"editor.copyWithSyntaxHighlighting": false,
	"vim.smartRelativeLine": true,
	"vim.normalModeKeyBindingsNonRecursive": [
		// Semicolon opens vim command line, disabled by default to allow for repeating commands
		// {
		// 	"before": [";"],
		// 	"commands": ["vim.showQuickpickCmdLine"]
		// },
		// Leader+F+F opens quick open
		{
			"before": ["<leader>", "f", "f"],
			"commands": ["workbench.action.quickOpen"]
		},
		// Leader+W to save
		{
			"before": ["<leader>", "w"],
			"commands": [":w"]
		},
		// Leader+Q to quit
		{
			"before": ["<leader>", "q"],
			"commands": [":q"]
		},
		// Leader+/ to comment/uncomment line
		{
			"before": ["<leader>", "/"],
			"commands": ["editor.action.commentLine"]
		},
		// Leader+I to toggle boolean
		{
			"before": ["<leader>", "i"],
			"commands": ["extension.toggleBool"]
		},
		// Tab cycles editors in same group
		{
			"before": ["<tab>"],
			"commands": ["workbench.action.nextEditorInGroup"]
		},
		{
			"before": ["<shift+tab>"],
			"commands": ["workbench.action.previousEditorInGroup"]
		},
		// Leader+S to split editor
		{
			"before": ["<leader>", "s"],
			"commands": [":vsp"]
		},
		// Leader+D to go to definition
		{
			"before": ["<leader>", "d"],
			"commands": ["editor.action.goToDeclaration"]
		},
		// Leader+A to open quick fix
		{
			"before": ["<leader>", "a"],
			"commands": ["editor.action.quickFix"]
		},
		// Leader+H to open hover
		{
			"before": ["<leader>", "h"],
			"commands": ["editor.action.showHover"]
		},
		// ]+D to go to next diagnostic
		{
			"before": ["]", "d"],
			"commands": ["editor.action.marker.next"]
		},
		// [ + D to go to previous diagnostic
		{
			"before": ["[", "d"],
			"commands": ["editor.action.marker.prev"]
		},
		// Leader+C opens inline Copilot chat
		{
			"before": ["<leader>", "c"],
			"commands": ["inlineChat.start"]
		}
	],
	"vim.visualModeKeyBindingsNonRecursive": [
		// Leader+/ to comment/uncomment line
		{
			"before": ["<leader>", "/"],
			"commands": ["editor.action.commentLine"]
		},
		// Leader+C opens inline Copilot chat
		{
			"before": ["<leader>", "c"],
			"commands": ["inlineChat.start"]
		}
	],
	"diffEditor.ignoreTrimWhitespace": false,
	"editor.emptySelectionClipboard": false,
	"workbench.editor.enablePreview": false,
	"editor.multiCursorModifier": "ctrlCmd",
	"files.trimTrailingWhitespace": true,
	"diffEditor.renderSideBySide": false,
	"editor.snippetSuggestions": "top",
	"editor.detectIndentation": false,
	"files.insertFinalNewline": true,
	"files.trimFinalNewlines": true
}
