{
	// Set color theme
	"workbench.colorTheme": "Vesper",
	// Set icon themes
	"workbench.iconTheme": "symbols",
	"workbench.productIconTheme": "fluent-icons",
	// Set font
	"editor.fontFamily": "JetBrainsMono Nerd Font",
	"terminal.integrated.fontFamily": "JetBrainsMono Nerd Font",
	"debug.console.fontFamily": "JetBrainsMono Nerd Font",
	// Tweak Vesper theme to my liking
	"workbench.colorCustomizations": {
		"[Vesper]": {
			"statusBar.noFolderBackground": "#101010", // Default is #68217a, which doesn't fit the theme
			"menu.background": "#171717", // Default is #3c3c3c, but I like it darker
			"menu.separatorBackground": "#202020" // Default is #606060, but I like it darker
		}
	},
	// Show current file path in status bar, since I don't use breadcrumbs or tabs
	"filePathBar.statusBarAlignment": "right",
	"filePathBar.pathStyle": "relative",
	// Open VS Code without workspace
	"window.openWithoutArgumentsInNewWindow": "on",
	"window.restoreWindows": "none",
	// Override UI font
	"apc.font.family": "JetBrainsMono Nerd Font",
	// Import custom CSS
	"apc.imports": ["/C:/Users/Mikk/Dev/vscode-vim/custom.css"],
	// Disable explorer action confirmation windows for keyboard-only use
	"explorer.confirmDelete": false,
	"explorer.confirmDragAndDrop": false,
	// Disable visual clutter
	"window.density.editorTabHeight": "compact",
	"window.commandCenter": false,
	"symbols.hidesExplorerArrows": true,
	"breadcrumbs.enabled": false,
	"editor.lightbulb.enabled": "off",
	"editor.stickyScroll.enabled": false,
	"editor.linkedEditing": true,
	"editor.suggest.insertMode": "replace",
	"editor.lineNumbers": "relative",
	"editor.minimap.enabled": false,
	"editor.matchBrackets": "never",
	"editor.renderLineHighlight": "none",
	"editor.guides.indentation": false,
	"workbench.sideBar.location": "right",
	"workbench.tips.enabled": false,
	"workbench.tree.renderIndentGuides": "none",
	"workbench.editor.showTabs": "none",
	"workbench.layoutControl.enabled": false,
	"workbench.activityBar.location": "hidden",
	// Keep at least 10 lines above and below cursor for context
	"editor.cursorSurroundingLines": 10,
	// Vim settings
	"vim.leader": "<space>",
	// Allow going over folded lines without opening them
	"vim.foldfix": true,
	"vim.hlsearch": true,
	// Nicer copy-paste behavior
	"vim.useSystemClipboard": true,
	"editor.copyWithSyntaxHighlighting": false,
	"vim.smartRelativeLine": true,
	"vim.normalModeKeyBindingsNonRecursive": [
		// Semicolon opens vim command line, disabled by default to allow for repeating commands
		// {
		// 	"before": [";"],
		// 	"commands": ["vim.showQuickpickCmdLine"]
		// },
		// Leader+F+F opens quick open
		{
			"before": ["<leader>", "f", "f"],
			"commands": ["workbench.action.quickOpen"]
		},
		// Leader+W to save
		{
			"before": ["<leader>", "w"],
			"commands": [":w"]
		},
		// Leader+Q to quit
		{
			"before": ["<leader>", "q"],
			"commands": [":q"]
		},
		// Leader+/ to comment/uncomment line
		{
			"before": ["<leader>", "/"],
			"commands": ["editor.action.commentLine"]
		},
		// Leader+I to toggle boolean
		{
			"before": ["<leader>", "i"],
			"commands": ["extension.toggleBool"]
		},
		// Tab cycles editors in same group
		{
			"before": ["<tab>"],
			"commands": ["workbench.action.nextEditorInGroup"]
		},
		{
			"before": ["<shift+tab>"],
			"commands": ["workbench.action.previousEditorInGroup"]
		},
		// Leader+S to split editor
		{
			"before": ["<leader>", "s"],
			"commands": [":vsp"]
		},
		// Leader+D to go to definition
		{
			"before": ["<leader>", "d"],
			"commands": ["editor.action.goToDeclaration"]
		},
		// Leader+A to open quick fix
		{
			"before": ["<leader>", "a"],
			"commands": ["editor.action.quickFix"]
		},
		// Leader+H to open hover
		{
			"before": ["<leader>", "h"],
			"commands": ["editor.action.showHover"]
		},
		// ]+D to go to next diagnostic
		{
			"before": ["]", "d"],
			"commands": ["editor.action.marker.next"]
		},
		// [ + D to go to previous diagnostic
		{
			"before": ["[", "d"],
			"commands": ["editor.action.marker.prev"]
		}
	],
	"vim.visualModeKeyBindingsNonRecursive": [
		// Leader+/ to comment/uncomment line
		{
			"before": ["<leader>", "/"],
			"commands": ["editor.action.commentLine"]
		}
	],
	"diffEditor.ignoreTrimWhitespace": false,
	"editor.emptySelectionClipboard": false,
	"workbench.editor.enablePreview": false,
	"editor.multiCursorModifier": "ctrlCmd",
	"files.trimTrailingWhitespace": true,
	"diffEditor.renderSideBySide": false,
	"editor.snippetSuggestions": "top",
	"editor.detectIndentation": false,
	"files.insertFinalNewline": true,
	"files.trimFinalNewlines": true
}
