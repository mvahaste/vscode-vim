{
	// Set color theme
	"workbench.colorTheme": "One Dark Pro Darker",
	// Set icon themes
	"workbench.iconTheme": "symbols",
	"workbench.productIconTheme": "fluent-icons",
	// Set font
	"editor.fontFamily": "JetBrainsMono Nerd Font",
	"terminal.integrated.fontFamily": "JetBrainsMono Nerd Font",
	"debug.console.fontFamily": "JetBrainsMono Nerd Font",
	// Disable font ligatures
	"editor.fontLigatures": false,
	// Tweak Vesper theme to my liking
	"workbench.colorCustomizations": {
		"[One Dark Pro Darker]": {
			// Make the backgrounds darker
			"editor.background": "#121417",
			"sideBar.background": "#121417",
			"sideBarSectionHeader.background": "#121417",
			"sideBar.border": "#121417",
			"activityBar.background": "#121417",
			"activityBar.border": "#121417",
			"statusBar.background": "#121417",
			"statusBar.border": "#121417",
			"statusBar.noFolderBackground": "#121417",
			"statusBar.debuggingBackground": "#121417",
			"statusBar.debuggingBorder": "#121417",
			"titleBar.activeBackground": "#121417",
			"titleBar.inactiveBackground": "#121417",
			"panel.border": "#121417",
			"quickInput.background": "#121417",
			"input.background": "#121417",
			"menu.background": "#121417",
			"editorSuggestWidget.background": "#121417",
			"sideBarTitle.background": "#121417",
			"terminal.background": "#121417",
			// Selection background
			"quickInputList.focusBackground": "#1b1e23",
			"list.focusBackground": "#1b1e23",
			"list.activeSelectionBackground": "#1b1e23",
			"list.inactiveSelectionBackground": "#1b1e23",
			// Indentation guides
			"editorIndentGuide.background1": "#252932",
			"editorIndentGuide.activeBackground1": "#252932",
			"tree.indentGuidesStroke": "#252932"
		},
		"[Vesper]": {
			// Make the backgrounds darker
			"statusBar.noFolderBackground": "#101010", // Default is #68217a
			"menu.background": "#171717", // Default is #3c3c3c
			"menu.separatorBackground": "#202020" // Default is #606060
		},
		"[Noir Essence Dark]": {
			"list.focusOutline": "#7daea3" // Default is transparent, but I navigate with the keyboard so it's helpful to have a border
		}
	},
	// Show current file path in status bar, since I don't use breadcrumbs or tabs
	"filePathBar.statusBarAlignment": "right",
	"filePathBar.pathStyle": "relative",
	// Show the clock in the status bar
	"clock.format": "HH:MM",
	"clock.alignment": "Right",
	"clock.iconName": "none",
	"clock.priority": 0,
	// Tailwind Fold settings
	"tailwind-fold.foldStyle": "QUOTES",
	"tailwind-fold.unfoldIfLineSelected": true,
	"tailwind-fold.showTailwindImage": false,
	"tailwind-fold.foldedTextColor": "",
	"tailwind-fold.foldedTextBackgroundColor": "",
	"tailwind-fold.autoFold": true,
	// Allow comments in JSON files
	"files.associations": {
		"*.json": "jsonc"
	},
	// Open VS Code without workspace
	"workbench.startupEditor": "none",
	"window.openWithoutArgumentsInNewWindow": "on",
	"window.restoreWindows": "none",
	// Override UI font
	"apc.font.family": "JetBrainsMono Nerd Font",
	// Import custom CSS
	"apc.imports": ["/C:/Users/Mikk/Dev/vscode-vim/custom.css"],
	// Disable title bar on systems that support it
	// "apc.electron": {
	// 	"titleBarStyle": "hidden"
	// },
	// Disable explorer action confirmation windows for keyboard-only use
	"explorer.confirmDelete": false,
	"explorer.confirmDragAndDrop": false,
	// Format on save and paste
	"editor.formatOnSave": true,
	"editor.formatOnPaste": true,
	// Visual tweaks (clutter, etc.)
	"window.title": "${dirty} ${activeRepositoryName} (${activeRepositoryBranchName})",
	"window.commandCenter": false,
	"window.menuBarVisibility": "compact",
	"window.density.editorTabHeight": "compact",
	"symbols.hidesExplorerArrows": true,
	"editor.colorDecorators": false,
	"editor.lightbulb.enabled": "off",
	"editor.stickyScroll.enabled": false,
	"editor.linkedEditing": true,
	"editor.suggest.insertMode": "replace",
	"editor.lineNumbers": "relative",
	"editor.matchBrackets": "never",
	"editor.minimap.enabled": true,
	"editor.minimap.autohide": true,
	"editor.renderLineHighlight": "none",
	"editor.guides.indentation": true,
	"editor.smoothScrolling": true,
	"editor.cursorSmoothCaretAnimation": "on",
	"workbench.sideBar.location": "right",
	"workbench.tips.enabled": false,
	"workbench.tree.indent": 16,
	"workbench.tree.renderIndentGuides": "always",
	"workbench.editor.showTabs": "none",
	"workbench.activityBar.location": "hidden",
	"workbench.layoutControl.enabled": false,
	"breadcrumbs.enabled": false,
	// Keep at least 10 lines above and below cursor for context
	"editor.cursorSurroundingLines": 10,
	// Vim settings
	"vim.leader": "<space>",
	// Allow going over folded lines without opening them
	"vim.foldfix": true,
	"vim.hlsearch": true,
	// Nicer copy-paste behavior
	"vim.useSystemClipboard": true,
	"editor.copyWithSyntaxHighlighting": false,
	"vim.smartRelativeLine": true,
	"vim.normalModeKeyBindingsNonRecursive": [
		// Semicolon opens vim command line, disabled by default to allow for repeating commands
		// {
		// 	"before": [";"],
		// 	"commands": ["vim.showQuickpickCmdLine"]
		// },
		// Leader+F+F opens quick open
		{
			"before": ["<leader>", "f", "f"],
			"commands": ["workbench.action.quickOpen"]
		},
		// Leader+W to save
		{
			"before": ["<leader>", "w"],
			"commands": [":w"]
		},
		// Leader+Q to quit
		{
			"before": ["<leader>", "q"],
			"commands": [":q"]
		},
		// Leader+/ to comment/uncomment line
		{
			"before": ["<leader>", "/"],
			"commands": ["editor.action.commentLine"]
		},
		// Leader+I to toggle boolean
		{
			"before": ["<leader>", "i"],
			"commands": ["extension.toggleBool"]
		},
		// Tab cycles editors in same group
		{
			"before": ["<tab>"],
			"commands": ["workbench.action.nextEditorInGroup"]
		},
		{
			"before": ["<shift+tab>"],
			"commands": ["workbench.action.previousEditorInGroup"]
		},
		// Leader+S to split editor
		{
			"before": ["<leader>", "s"],
			"commands": [":vsp"]
		},
		// Leader+D to go to definition
		{
			"before": ["<leader>", "d"],
			"commands": ["editor.action.goToDeclaration"]
		},
		// Leader+A to open quick fix
		{
			"before": ["<leader>", "a"],
			"commands": ["editor.action.quickFix"]
		},
		// Leader+H to open hover
		{
			"before": ["<leader>", "h"],
			"commands": ["editor.action.showHover"]
		},
		// ]+D to go to next diagnostic
		{
			"before": ["]", "d"],
			"commands": ["editor.action.marker.next"]
		},
		// [ + D to go to previous diagnostic
		{
			"before": ["[", "d"],
			"commands": ["editor.action.marker.prev"]
		}
	],
	"vim.visualModeKeyBindingsNonRecursive": [
		// Leader+/ to comment/uncomment line
		{
			"before": ["<leader>", "/"],
			"commands": ["editor.action.commentLine"]
		}
	],
	"diffEditor.ignoreTrimWhitespace": false,
	"editor.emptySelectionClipboard": false,
	"workbench.editor.enablePreview": false,
	"editor.multiCursorModifier": "ctrlCmd",
	"files.trimTrailingWhitespace": true,
	"diffEditor.renderSideBySide": false,
	"editor.snippetSuggestions": "top",
	"editor.detectIndentation": false,
	"files.insertFinalNewline": true,
	"files.trimFinalNewlines": true
}
